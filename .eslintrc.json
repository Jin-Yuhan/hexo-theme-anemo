{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "off",
      "always"
    ],

    "no-empty-function": "off",
    "no-extra-semi": "off",
    "@typescript-eslint/no-non-null-assertion": "off",

    "sort-imports": "warn",

    "curly": "error",
    "eqeqeq": "error",
    "no-var": "error",
    "no-undef": "error",
    "no-throw-literal": "error",
    "no-trailing-spaces": "error",
    "no-spaced-func": "error",
    "no-redeclare": "error",
    "valid-typeof": "error",
    "strict": "error"
  }
}
