<%
var enable = theme.mermaid.enable;

if (enable) {
  if (is_post()) {
    enable = !theme.mermaid.specific || (theme.mermaid.specific && page.mermaid);
  } else if (is_page()) {
    enable = page.mermaid;
  } else {
    enable = false;
  }
}
%>

<% if (enable) { %>
  <%#- js_ex(theme.static_prefix.mermaid, 'mermaid.min.js') %>
<% } %>

